@model StickersTemplate.Configuration.Models.StickerViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Sticker</h2>

<h3>Are you sure you want to delete this sticker?</h3>
<p>After you publish the changes, deleted stickers will no longer be returned by the messaging extension in Teams.</p>
<p>Messages that were sent with this sticker will continue to show the image.</p>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImageUri)
        </dt>

        <dd>
            <img src="@Model.ImageUri" width="280" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Keywords)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Keywords)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
